---
/**
 * Enhanced Project Component
 *
 * Displays detailed project information with highlights and tech stack
 * Shows green "Ongoing" badge for active projects
 */
import type { Project } from '../../lib/portfolio';

interface Props extends Project {}

const { title, desc, highlights = [], tech, demoLink, githubLink, demoLinkRel, status } = Astro.props;

const isOngoing = status === 'ongoing';
---

<div class="rounded-xl bg-white dark:bg-gray-800 shadow-xl hover:shadow-2xl transition-all duration-300 border border-gray-200 dark:border-gray-700 relative">
  <div class="p-6">
    <!-- Header: Title + Ongoing Badge -->
    <div class="flex items-start justify-between gap-3 mb-3">
      <h2 class="text-xl font-bold text-primary">{title}</h2>
      {isOngoing && (
        <span class="inline-flex items-center gap-1 px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-700 dark:bg-green-900/30 dark:text-green-400 shrink-0">
          <span class="w-2 h-2 rounded-full bg-green-500 animate-pulse"></span>
          Ongoing
        </span>
      )}
    </div>

    <!-- Overview -->
    <div class="mb-4">
      <h3 class="text-sm font-semibold uppercase tracking-wider text-gray-400 dark:text-gray-500 mb-1.5">Overview</h3>
      <p class="text-gray-600 dark:text-gray-300 text-sm leading-relaxed">{desc}</p>
    </div>

    <!-- Responsibilities -->
    {highlights && highlights.length > 0 && (
      <div class="mb-4">
        <h3 class="text-sm font-semibold uppercase tracking-wider text-gray-400 dark:text-gray-500 mb-1.5">Responsibilities</h3>
        <ul class="space-y-1">
          {highlights.map((item: string) => (
            <li class="flex items-start gap-2 text-sm text-gray-500 dark:text-gray-400">
              <span class="text-primary mt-0.5">â€¢</span>
              <span>{item}</span>
            </li>
          ))}
        </ul>
      </div>
    )}

    <!-- Tech Stack -->
    <div>
      <h3 class="text-sm font-semibold uppercase tracking-wider text-gray-400 dark:text-gray-500 mb-2">Tech Stack</h3>
      <div class="flex flex-wrap gap-1.5">
        {tech.map((techItem: string) => (
          <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium border border-primary/30 text-primary">{techItem}</span>
        ))}
      </div>
    </div>

    <!-- Action Buttons -->
    {(demoLink || githubLink) && (
      <div class="flex justify-end gap-2 mt-4 pt-3 border-t border-gray-200 dark:border-gray-700">
        {demoLink && (
          <a
            href={demoLink}
            target="_blank"
            rel={demoLinkRel || "noopener noreferrer"}
            class="inline-flex items-center gap-1 px-3 py-1.5 text-sm bg-primary text-white rounded-lg font-medium hover:bg-primary-600 transition-colors"
          >
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
            </svg>
            View Project
          </a>
        )}
        {githubLink && (
          <a
            href={githubLink}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-1 px-3 py-1.5 text-sm hover:bg-gray-100 dark:hover:bg-gray-700 rounded-lg font-medium transition-colors"
          >
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
            GitHub
          </a>
        )}
      </div>
    )}
  </div>
</div>
