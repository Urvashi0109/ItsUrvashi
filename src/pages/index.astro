---
import { SITE_TITLE, SITE_TAGLINE, SITE_DESCRIPTION, PROFESSIONAL_SUMMARY, SOCIAL_LINKS } from '../consts';
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';
import ProjectCard from '../components/Project/ProjectCard.astro';
import PostItem from '../components/PostItem.astro';
import { getFeaturedProjects } from '../lib/portfolio';

// Using image from public folder
const rawBase = import.meta.env.BASE_URL;
const base = rawBase.endsWith('/') ? rawBase : rawBase + '/';
const Ava = `${base}perfect.jpeg`;

type BlogPost = CollectionEntry<'blog'>;

const ongoingProjects = getFeaturedProjects(3);
const posts = (await getCollection('blog')).sort((a: BlogPost, b: BlogPost) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()).slice(0, 3);
---

<BaseLayout title={SITE_TITLE + ' - ' + SITE_TAGLINE} description={SITE_DESCRIPTION}>
	<!-- Hero Section -->
	<div class="py-16">
		<div class="container flex flex-col lg:flex-row-reverse items-center gap-12">
			<img
				src={Ava}
				alt="Urvashi Choubey"
				width="300"
				loading="eager"
				class="rounded-2xl shadow-2xl"
			/>
			<div>
				<h1 class="text-5xl font-bold mb-2">Hi, I'm Urvashi! ðŸ‘‹</h1>
				<p class="text-xl text-primary font-semibold mb-4">{SITE_TAGLINE}</p>
			<p class="text-lg text-gray-600 dark:text-gray-300 leading-relaxed mb-6" set:html={PROFESSIONAL_SUMMARY}>
			</p>
				
				<!-- Social Links -->
				<div class="flex gap-3 mb-6">
					<a href={SOCIAL_LINKS.github} target="_blank" rel="noopener noreferrer" class="inline-flex items-center justify-center w-10 h-10 rounded-full border border-gray-300 dark:border-gray-600 hover:bg-gray-100 dark:hover:bg-gray-800 transition-colors">
						<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
							<path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
						</svg>
					</a>
					<a href={SOCIAL_LINKS.linkedin} target="_blank" rel="noopener noreferrer" class="inline-flex items-center justify-center w-10 h-10 rounded-full border border-gray-300 dark:border-gray-600 hover:bg-gray-100 dark:hover:bg-gray-800 transition-colors">
						<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
							<path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
						</svg>
					</a>
					<a href={SOCIAL_LINKS.email} class="inline-flex items-center justify-center w-10 h-10 rounded-full border border-gray-300 dark:border-gray-600 hover:bg-gray-100 dark:hover:bg-gray-800 transition-colors">
						<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
						</svg>
					</a>
				</div>

				<!-- CTA Buttons -->
				<div class="flex gap-3">
					<a href={`${base}projects`} class="inline-flex items-center gap-2 px-4 py-2 bg-primary text-white rounded-lg font-medium hover:bg-primary-600 transition-colors">
						View Projects
						<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
						</svg>
					</a>
					<a href={`${base}about`} class="inline-flex items-center px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg font-medium hover:bg-gray-100 dark:hover:bg-gray-800 transition-colors">About Me</a>
				</div>
			</div>
		</div>
	</div>

	<div class='container py-12'>
		<!-- Recent Posts Section -->
		{posts.length > 0 && (
			<div class='mb-16'>
				<div class="flex justify-between items-center mb-6">
					<h2 class="text-3xl font-bold">Recent Posts</h2>
					<a href={`${base}posts/`} class="inline-flex items-center gap-1 px-3 py-1.5 text-sm font-medium hover:bg-gray-100 dark:hover:bg-gray-800 rounded-lg transition-colors">
						All posts
						<svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
						</svg>
					</a>
				</div>
				<div class="space-y-4">
					{posts.map((post: BlogPost) => (
						<PostItem post={post} />
					))}
				</div>
			</div>
		)}

		<!-- Ongoing Projects Section -->
		<div class='mb-16'>
			<div class="flex justify-between items-center mb-6">
				<h2 class="text-3xl font-bold">Ongoing Projects</h2>
				<a href={`${base}projects/`} class="inline-flex items-center gap-1 px-3 py-1.5 text-sm font-medium hover:bg-gray-100 dark:hover:bg-gray-800 rounded-lg transition-colors">
					All projects
					<svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
					</svg>
				</a>
			</div>
			<div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
				{ongoingProjects.map(project => (
					<ProjectCard {...project} />
				))}
			</div>
		</div>
	</div>
</BaseLayout>
