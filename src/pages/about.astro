---
import { Image } from 'astro:assets';
import BaseLayout from '../layouts/BaseLayout.astro';
import { PROFESSIONAL_SUMMARY, SKILLS, SOCIAL_LINKS, SITE_EMAIL, SITE_PHONE } from '../consts';

// Using image from public folder
const rawBase = import.meta.env.BASE_URL;
const base = rawBase.endsWith('/') ? rawBase : rawBase + '/';
const Ava = `${base}perfect.jpeg`;
---

<BaseLayout
	title="About Me | Urvashi Choubey"
	description="Cloud Engineer with 2.5+ years of experience in AWS, Kubernetes, Terraform, and GitOps. Kubernetes Maintainer."
>
  <div class='container py-8'>

		<!-- Quick Navigation -->
		<nav class="mb-8">
			<div class="flex flex-wrap gap-2 justify-center">
